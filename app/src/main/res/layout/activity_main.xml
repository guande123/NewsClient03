<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gdcp.zgd.newsclient03.activity.MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="title"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        </android.support.v7.widget.Toolbar>
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </android.support.v4.view.ViewPager>

        <RadioGroup
            android:id="@+id/rg_01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/home_tab_01_selector"
                android:padding="3dp"
                android:text="新闻"
                android:textAlignment="center"
                android:textColor="@color/home_text_selector"/>

            <RadioButton
                android:id="@+id/rb_02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/home_tab_02_selector"
                android:padding="3dp"
                android:text="视听"
                android:textAlignment="center"
                android:textColor="@color/home_text_selector"/>

            <RadioButton
                android:id="@+id/rb_03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/home_tab_03_selector"
                android:padding="3dp"
                android:text="阅读"
                android:textAlignment="center"
                android:textColor="@color/home_text_selector"/>

            <RadioButton
                android:id="@+id/rb_04"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/home_tab_04_selector"
                android:padding="3dp"
                android:text="发现"
                android:textAlignment="center"
                android:textColor="@color/home_text_selector"/>

            <RadioButton
                android:id="@+id/rb_05"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/home_tab_05_selector"
                android:padding="3dp"
                android:text="设置"
                android:textAlignment="center"
                android:textColor="@color/home_text_selector"/>
        </RadioGroup>
    </LinearLayout>

    <!--第2部分：侧滑菜单
        添加如下属性让侧滑菜单显示在左边：
        android:layout_gravity="left"
    -->
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_gravity="left"
        app:headerLayout="@layout/navigation_view_header"
        app:menu="@menu/main"
        android:layout_width="200dp"
        android:layout_height="match_parent"/>
</android.support.v4.widget.DrawerLayout>
